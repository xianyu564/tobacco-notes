{
  "name": "tobacco-notes-tests",
  "version": "1.0.0",
  "description": "Comprehensive testing suite for tobacco notes application",
  "scripts": {
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --testPathPattern=unit --coverage",
    "test:integration": "jest --testPathPattern=integration --coverage",
    "test:e2e": "playwright test",
    "test:a11y": "jest --testPathPattern=accessibility",
    "test:performance": "jest --testPathPattern=performance",
    "test:performance:ci": "jest --testPathPattern=performance --ci",
    "test:axe": "node scripts/axe-tests.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "lint": "eslint ../",
    "lint:fix": "eslint ../ --fix",
    "serve": "http-server ../../docs -p 3000 -c-1",
    "serve:test": "concurrently \"npm run serve\" \"wait-on http://localhost:3000\"",
    "validate:all": "npm run lint && npm run test && npm run test:e2e",
    "pretest": "npm run lint",
    "posttest": "npm run test:coverage"
  },
  "dependencies": {
    "@axe-core/playwright": "^4.7.3",
    "@playwright/test": "^1.37.0",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^6.1.2",
    "@testing-library/user-event": "^14.4.3",
    "axe-core": "^4.7.2",
    "concurrently": "^8.2.0",
    "http-server": "^14.1.1",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "jest-junit": "^16.0.0",
    "jest-serializer-html": "^8.0.0",
    "lighthouse": "^11.0.0",
    "pa11y": "^6.2.3",
    "playwright": "^1.37.0",
    "puppeteer": "^21.1.1",
    "wait-on": "^7.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "babel-jest": "^29.6.2",
    "coveralls": "^3.1.1",
    "eslint": "^8.46.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "identity-obj-proxy": "^3.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/setup.js"],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "../**/*.js",
      "!../tests/**",
      "!**/node_modules/**"
    ],
    "coverageReporters": ["text", "html", "lcov"],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleNameMapper": {
      "\\.(css|less|scss)$": "identity-obj-proxy",
      "\\.(jpg|jpeg|png|gif|webp|svg)$": "<rootDir>/__mocks__/fileMock.js"
    },
    "reporters": [
      "default",
      ["jest-junit", {
        "outputDirectory": "reports/junit",
        "outputName": "js-test-results.xml"
      }]
    ],
    "testTimeout": 10000,
    "maxWorkers": "50%",
    "snapshotSerializers": [
      "jest-serializer-html"
    ],
    "globals": {
      "__DEV__": true
    }
  },
  "babel": {
    "presets": [
      ["@babel/preset-env", {
        "targets": {
          "node": "current"
        }
      }]
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "plugin:jest/recommended"
    ],
    "env": {
      "browser": true,
      "jest": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-debugger": "error",
      "semi": ["error", "always"]
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "testing",
    "validation",
    "accessibility",
    "performance",
    "tobacco-notes"
  ],
  "author": "Tobacco Notes Team",
  "license": "MIT"
}