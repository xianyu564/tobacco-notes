{
  "ci": {
    "collect": {
      "url": ["http://localhost:3000"],
      "numberOfRuns": 3,
      "settings": {
        "chromeFlags": "--no-sandbox --disable-gpu --headless",
        "preset": "desktop",
        "onlyCategories": ["accessibility", "performance", "best-practices", "seo"],
        "skipAudits": ["uses-http2"]
      }
    },
    "assert": {
      "assertions": {
        "categories:accessibility": ["error", {"minScore": 0.9}],
        "categories:performance": ["warn", {"minScore": 0.8}],
        "categories:best-practices": ["warn", {"minScore": 0.9}],
        "categories:seo": ["warn", {"minScore": 0.8}],
        
        "first-contentful-paint": ["warn", {"maxNumericValue": 2000}],
        "largest-contentful-paint": ["error", {"maxNumericValue": 4000}],
        "first-meaningful-paint": ["warn", {"maxNumericValue": 2500}],
        "speed-index": ["warn", {"maxNumericValue": 4000}],
        "interactive": ["error", {"maxNumericValue": 6000}],
        "cumulative-layout-shift": ["error", {"maxNumericValue": 0.1}],
        
        "color-contrast": "error",
        "image-alt": "error",
        "label": "error",
        "link-name": "error",
        "heading-order": "error",
        "landmark-one-main": "error",
        "page-has-heading-one": "error",
        "skip-link": "warn",
        "focus-traps": "error",
        "focusable-controls": "error",
        "interactive-element-affordance": "error",
        "logical-tab-order": "error",
        "managed-focus": "error",
        "offscreen-content-hidden": "error",
        "use-landmarks": "warn",
        "valid-lang": "error",
        
        "render-blocking-resources": "warn",
        "unused-css-rules": "warn",
        "unused-javascript": "warn",
        "modern-image-formats": "warn",
        "uses-optimized-images": "warn",
        "uses-text-compression": "warn",
        "uses-responsive-images": "warn",
        "efficient-animated-content": "warn",
        "preload-lcp-image": "warn",
        "total-byte-weight": ["warn", {"maxNumericValue": 1024000}],
        
        "is-on-https": "error",
        "uses-http2": "off",
        "no-vulnerable-libraries": "error",
        "csp-xss": "warn"
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": "./reports/lighthouse"
    }
  }
}